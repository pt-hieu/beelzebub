{
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node16",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "composite": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "exclude": ["dist"],
  "include": ["src"]
}
